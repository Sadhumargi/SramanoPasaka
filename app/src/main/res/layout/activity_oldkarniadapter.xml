<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:weightSum="1"
    android:id="@+id/relative_current">

    <ImageView
        android:id="@+id/kr_img"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        android:layout_alignTop="@+id/txt_guru"
        android:layout_alignBottom="@+id/txt_vihar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/name"
        android:id="@+id/txt_guru"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/kr_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/designation"
        android:id="@+id/txt_asist"
        android:layout_alignStart="@+id/txt_guru"
        android:layout_below="@+id/txt_guru"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/region"
        android:id="@+id/txt_grp"
        android:layout_below="@+id/txt_asist"
        android:layout_alignStart="@+id/txt_asist"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/city"
        android:id="@+id/txt_from"
        android:layout_below="@+id/txt_grp"
        android:layout_alignStart="@+id/txt_grp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/phone"
        android:id="@+id/txt_vihar"
        android:layout_below="@+id/txt_from"
        android:layout_alignStart="@+id/txt_from"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/karni_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/karni_desigantion"
        android:layout_alignStart="@+id/karni_desigantion"
        android:text="  Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Small Text"
        android:id="@+id/karni_desigantion"
        android:layout_below="@+id/txt_guru"
        android:textColor="#000000"
        android:layout_alignStart="@+id/karni_region" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Small Text"
        android:id="@+id/karni_region"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/txt_from"
        android:layout_below="@+id/karni_desigantion"
        android:layout_above="@+id/txt_from" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Small Text"
        android:id="@+id/karni_city"
        android:layout_alignStart="@+id/karni_phone"
        android:textColor="#000000"
        android:layout_below="@+id/karni_region" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Small Text"
        android:id="@+id/karni_phone"
        android:layout_below="@+id/karni_city"
        android:layout_alignStart="@+id/karni_desigantion"
        android:textColor="#000000" />

</RelativeLayout>
    </android.support.v7.widget.CardView>