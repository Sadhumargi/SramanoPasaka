<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Pathsala_background"
    tools:context="com.sramanopasaka.sipanionline.sadhumargi.AchivementsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:id="@+id/achievmenttool">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <!--UI for Achivements-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achievementArea"
        android:layout_below="@+id/radiogrp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:paddingBottom="@dimen/dimen_10"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:hint="@string/Achievement_area"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:background="@drawable/border_basicdetails"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achievementLevel"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:paddingBottom="@dimen/dimen_10"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:hint="@string/Achievement_Level"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:background="@drawable/border_basicdetails"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achievementType"
        android:layout_margin="@dimen/fab_margin"
        android:paddingBottom="@dimen/dimen_10"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:hint="@string/Achievement_type"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:background="@drawable/border_basicdetails"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsAchievement"
        android:layout_margin="@dimen/fab_margin"
        android:paddingBottom="@dimen/dimen_10"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:hint="@string/Achievement_details"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:background="@drawable/border_basicdetails"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/achievementYear"
        android:layout_margin="@dimen/fab_margin"
        android:paddingBottom="@dimen/dimen_10"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:hint="@string/year"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:background="@drawable/border_basicdetails"/>



    <Button
        android:id="@+id/addAchievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_10"
        android:background="@drawable/border_shape"
        android:foregroundGravity="center_horizontal|center_vertical"
        android:text="@string/add_to_profile"
        android:textColor="@color/white"
        android:padding="@dimen/dimen_10" />

    <!--END of UI for Achievements-->


</LinearLayout>
