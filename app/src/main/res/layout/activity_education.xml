    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/spinner_style"
        android:id="@+id/educationName"
        android:layout_margin="@dimen/fab_margin"/>

    <EditText
        android:id="@+id/educationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:paddingLeft="@dimen/small"
        android:digits="abcdefghijklmnopqrstuvwxyz ."
        android:background="@drawable/border_basicdetails"
        android:hint="@string/Description"
        android:paddingBottom="@dimen/dimen_10"
        android:textColor="@color/black"
        android:maxLength="50"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:textSize="@dimen/large"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/educationScore"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/small"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/border_basicdetails"
        android:hint="@string/Marks"
        android:inputType="number"
        android:maxLength="2"
        android:paddingBottom="@dimen/dimen_10"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:textSize="@dimen/large"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/educationInstitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/border_basicdetails"
        android:hint="@string/Institute"
        android:paddingBottom="@dimen/dimen_10"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:textSize="@dimen/large"
        android:textStyle="normal" />


    <EditText
        android:editable="false"
        android:digits="abcdefghijklmnopqrstuvwxyz."
        android:id="@+id/educationyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/border_basicdetails"
        android:hint="@string/year"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/small"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_basicdetails"
        android:textSize="@dimen/large"
        android:textStyle="normal" />


    <Button
        android:id="@+id/addEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_10"
        android:background="@drawable/border_shape"
        android:foregroundGravity="center_horizontal|center_vertical"
        android:padding="@dimen/dimen_10"
        android:text="@string/add_to_profile"
        android:textColor="@color/white" />

    <!--END of UI for Education-->


</LinearLayout>
