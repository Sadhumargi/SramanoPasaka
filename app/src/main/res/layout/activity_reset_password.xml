<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pathsala_background"
    android:orientation="vertical"
    tools:context="com.sramanopasaka.sipanionline.sadhumargi.ResetPasswordActivity"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_resetpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
    </android.support.design.widget.AppBarLayout>

        <EditText
            android:id="@+id/edt_Firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/firstname"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:background="@drawable/border_basicdetails"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_30"
            android:paddingBottom="@dimen/dimen_10">
        </EditText>

    <EditText
        android:id="@+id/edt_Lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lastname"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:background="@drawable/border_basicdetails"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:layout_marginTop="@dimen/dimen_22"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_10">
    </EditText>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/Basic_details"
        android:layout_marginTop="@dimen/dimen_30"/>

    <EditText
        android:id="@+id/edt_mobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/MobileNo."
        android:textColor="@color/black"
        android:textStyle="normal"
        android:inputType="phone"
        android:maxLength="10"
        android:background="@drawable/border_basicdetails"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:layout_marginTop="@dimen/dimen_22"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_10">
    </EditText>


    <TextView
        android:id="@+id/edt_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="@dimen/large"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_16"
        android:gravity="center_horizontal">
    </TextView>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Emailid_resetpass"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:background="@drawable/border_basicdetails"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:layout_marginTop="@dimen/dimen_22"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_10">
    </EditText>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/Basic_details"
        android:layout_marginTop="@dimen/dimen_30"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        >


        <Button
            android:id="@+id/btn_Close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:text="@string/Close"
            android:textAllCaps="false"
            android:background="@color/Basic_details"
            android:padding="@dimen/dimen_10"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_22"
            android:layout_toStartOf="@+id/btn_Recover"
            android:layout_alignParentTop="true">
        </Button>

        <Button
            android:id="@+id/btn_Recover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/dimen_10"
            android:text="@string/Recover"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_marginLeft="@dimen/dimen_22"
            android:layout_marginRight="@dimen/dimen_22"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"></Button>

    </RelativeLayout>



</LinearLayout>
