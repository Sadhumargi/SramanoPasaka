<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

    <EditText
        android:id="@+id/birth_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/edt_border"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:hint="@string/birthdate"
        android:paddingBottom="@dimen/dimen_10"
        android:singleLine="true"
        android:editable="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/large"
        android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border">

                <CheckBox
                    android:id="@+id/no_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:theme="@style/MyCheckBox" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radiogrp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    android:text="@string/No_birth_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large"
                    android:textStyle="normal"
                    />

            </LinearLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="@string/age"
                android:inputType="number"
                android:maxLength="3"
                android:paddingBottom="@dimen/dimen_10"
                android:editable="false"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/large"
                android:textStyle="normal" />


            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="Gender"
                android:paddingBottom="@dimen/dimen_10"
                android:singleLine="true"
                android:editable="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/large"
                android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countryCodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/fab_margin"
            android:text="+91"
            android:textColor="@color/white"
            android:textSize="@dimen/large"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/mobile_number"
            android:inputType="number"
            android:maxLength="10"
            android:paddingBottom="@dimen/dimen_10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/large"
            android:textStyle="normal" />
    </LinearLayout>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/edt_border"
        android:hint="@string/email_id"
        android:maxLength="100"
        android:paddingBottom="@dimen/dimen_10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/large"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/edt_border"
        android:drawableEnd="@drawable/downarrow"
        android:editable="false"
        android:hint="@string/select_country"
        android:maxLength="40"
        android:paddingBottom="@dimen/dimen_10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/large"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/edt_border"
        android:drawableEnd="@drawable/downarrow"
        android:editable="false"
        android:hint="@string/select_state"
        android:maxLength="60"
        android:paddingBottom="@dimen/dimen_10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/large"
        android:textStyle="normal" />



    <EditText
        android:id="@+id/pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/edt_border"
        android:hint="@string/pincode"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="@dimen/dimen_10"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="@dimen/large"
        android:textStyle="normal" />



            <EditText
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="@string/Post"
                android:inputType="textCapCharacters"
                android:maxLength="40"
                android:paddingBottom="@dimen/dimen_10"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/large"
                android:textStyle="normal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:weightSum="1"
        app:hintTextAppearance="@style/edittext"
        app:passwordToggleTint="#FFF">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="9.40"
            android:background="@drawable/edt_border"
            android:hint="@string/Password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/large"
            android:textStyle="normal" />


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:weightSum="1"
        app:hintTextAppearance="@style/edittext"
        app:passwordToggleTint="#FFF">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/retype_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:singleLine="true"
            android:hint="@string/Retype_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/large"
            android:textStyle="normal" />


    </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
    <Spinner
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        style="@style/spinner_style"
        android:id="@+id/profile_created_by"
        android:textAlignment="center"
        android:layout_margin="@dimen/fab_margin"/>

            <EditText
                android:id="@+id/work_code"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="@string/workercode"
                android:inputType="number"
                android:maxLength="6"
                android:paddingBottom="@dimen/dimen_10"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="@dimen/large"
                android:textStyle="normal" />

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:text="@string/terms_conditions"
            android:textColor="@color/white"
            android:textSize="@dimen/large"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/create_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/border_shape_createaccount_submitbutton"
        android:text="@string/create_profile"
        android:textColor="@color/white"
        android:textSize="@dimen/large"
        android:textStyle="normal" />
</LinearLayout>
    </ScrollView>

</LinearLayout>