<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/relative1"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view3">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tooldonations"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/actionbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <!--<include layout="@layout/content_donations"/>-->

    <GridView
        android:layout_below="@+id/view3"
        android:id="@+id/donate_grid_view"
        android:scrollbars="vertical"
        android:layout_margin="@dimen/extra_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="@dimen/extra_small"
        android:horizontalSpacing="@dimen/extra_small"
        android:numColumns="2"/>


        <!--android:dividerHeight="20.0sp"-->

</RelativeLayout>
