<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.sramanopasaka.sipanionline.sadhumargi.CreateAccountFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:padding="@dimen/dimen_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RadioGroup

            android:id="@+id/radiogrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/radio_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:padding="10dp"
                android:shadowColor="@color/white"
                android:text="@string/Ms"
                android:textColor="@color/white"
                android:textSize="@dimen/large"
                android:theme="@style/MyRadioButton"/>

            <RadioButton
                android:id="@+id/radio_mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/Mr"
                android:textColor="@color/white"
                android:textSize="@dimen/large"
                android:theme="@style/MyRadioButton"
                />

            <RadioButton
                android:id="@+id/radio_mrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/Mrs"
                android:textColor="@color/white"
                android:textSize="@dimen/large"
                android:theme="@style/MyRadioButton">
            </RadioButton>

        </RadioGroup>


        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/firstname"
            android:paddingBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/large"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/middlename"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"/>


        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/lastname"
            android:paddingBottom="@dimen/dimen_10"
            android:textColorHint="@color/white"
            android:textSize="@dimen/large"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            />

        <EditText
            android:id="@+id/birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:hint="@string/birthdate"
            android:paddingBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/large"
            android:textStyle="normal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="@dimen/fab_margin"
                android:paddingTop="@dimen/fab_margin"
                android:text="ISD +91"
                android:textColor="@color/white"
                android:textSize="@dimen/large"
                android:textStyle="normal"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_number"
                android:maxLength="10"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:textColorHint="@color/white"
                android:paddingBottom="@dimen/dimen_10"
                android:textStyle="normal"
                android:textSize="@dimen/large"
                android:textColor="@color/white"
                android:textCursorDrawable="@drawable/cursor_drawable"/>
        </LinearLayout>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:layout_below="@+id/radiogrp"
            android:id="@+id/email"
            android:textColor="@color/white"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/email_id"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textCursorDrawable="@drawable/cursor_drawable"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/country"
            android:background="@drawable/edt_border"
            android:hint="@string/select_country"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableEnd="@drawable/downarrow"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="60"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/state"
            android:background="@drawable/edt_border"
            android:hint="@string/select_state"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableEnd="@drawable/downarrow"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:maxLength="40"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/selectcity"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:drawableEnd="@drawable/downarrow"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:maxLength="6"
            android:id="@+id/pincode"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/pincode"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/til1"
            app:hintTextAppearance="@style/edittext"
            app:passwordToggleTint="#FFF"
            android:textColorHint="@color/white">

            <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:id="@+id/password"
                android:maxLength="12"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edt_border"
            android:hint="@string/Password"
            android:textColorHint="@color/white"
            android:paddingBottom="@dimen/dimen_10"
            android:textStyle="normal"
            android:textSize="@dimen/large"
                android:inputType="textPassword"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor_drawable"
                android:layout_weight="9.40" />


        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/til2"
            app:hintTextAppearance="@style/edittext"
            app:passwordToggleTint="#FFF"
            android:textColorHint="@color/white">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:id="@+id/retype_password"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/edt_border"
                android:hint="@string/Retype_password"
                android:paddingBottom="@dimen/dimen_10"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:inputType="textPassword"
                android:textSize="@dimen/large"
                android:textCursorDrawable="@drawable/cursor_drawable"/>


        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:id="@+id/chkbox"
                android:theme="@style/MyCheckBox"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radiogrp"
                android:layout_margin="@dimen/fab_margin"
                android:textColor="@color/white"
                android:text="@string/terms_conditions"
                android:textStyle="normal"
                android:textSize="@dimen/large"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/create_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogrp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/border_shape_createaccount_submitbutton"
            android:text="@string/create_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/large"
            android:textStyle="normal" />
    </LinearLayout>
    </ScrollView>


</RelativeLayout>
