<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/relative_current">

        <ImageView
            android:id="@+id/kr_img"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:layout_above="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="नाम"
            android:id="@+id/txt_guru"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/karni_name"
            android:layout_toStartOf="@+id/kr_img"
            android:layout_alignEnd="@+id/txt_grp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  पद"
            android:textSize="15dp"
            android:id="@+id/txt_asist"
            android:layout_below="@+id/txt_guru"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/kr_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" क्षेत"
            android:id="@+id/txt_grp"
            android:textSize="15dp"
            android:layout_below="@+id/txt_asist"
            android:layout_alignStart="@+id/txt_asist"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="शहर"
            android:textSize="15dp"
            android:id="@+id/txt_from"
            android:layout_below="@+id/txt_grp"
            android:layout_alignStart="@+id/txt_grp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/phone"
            android:textSize="15dp"
            android:id="@+id/txt_vihar"
            android:layout_below="@+id/txt_from"
            android:layout_alignStart="@+id/txt_from"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_name"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_from"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_desigantion"
            android:textColor="@color/black"
            android:layout_below="@+id/karni_name"
            android:layout_alignStart="@+id/karni_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_region"
            android:textColor="@color/black"
            android:layout_below="@+id/karni_desigantion"
            android:layout_alignStart="@+id/karni_desigantion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_city"
            android:textColor="@color/black"
            android:layout_below="@+id/karni_region"
            android:layout_alignStart="@+id/karni_region" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_phone"
            android:textColor="@color/black"
            android:layout_below="@+id/karni_city"
            android:layout_alignStart="@+id/karni_city" />

        <TextView
            android:text="पता"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:layout_below="@+id/txt_vihar"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignStart="@+id/txt_guru" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="  Small Text"
            android:id="@+id/karni_state"
            android:maxLines="4"
            android:lines="4"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/textView22"
            android:layout_below="@+id/kr_img"
            android:layout_alignStart="@+id/karni_phone" />



    </RelativeLayout>
</android.support.v7.widget.CardView>