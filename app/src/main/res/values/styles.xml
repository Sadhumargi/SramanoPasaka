<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/tabTransparent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textStyle">bold</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@style/MyTitleTextStyle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="windowActionBar">false</item>
        <item name="background">@color/background</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="sliding_menu_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="black_large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sliding_text_size</item>
    </style>

    <style name="black_small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="question_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="keyboard_btn">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/keyboard_btn</item>

    </style>
    <!--toggle text-->
    <style  name= "edittext" parent="AppTheme">

        <item name="android:textColor">@color/white</item>
       <item name="android:textSize">@dimen/large</item>



    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="MyRadio" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Basic_details</item>
        <item name="colorControlActivated">@color/Basic_details</item>
    </style>

    <style name="MyCheck" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Basic_details</item>
        <item name="colorControlActivated">@color/Basic_details</item>
    </style>



    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/statusbarcolor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="skipButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/skip_button_bg</item>
    </style>
    <style name="nextButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/next_button_bg</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#3f3f3f</item>
        <item name="android:textColorSecondary">#3f3f3f</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
        <item name="android:timePickerMode" tools:targetApi="lollipop">spinner</item>
       <!-- <item name="android:listChoiceIndicatorMultiple">@drawable/selector_checkbox</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/selector_radiobutton</item>-->
        <item name="textColorAlertDialogListItem">#3f3f3f</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">#242527</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="spinner_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">#D000</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">@color/profile_status_color</item>
        <item name="colorControlHighlight">@color/profile_status_color</item>
    </style>

    <style name="MyMaterialTheme.Base.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

